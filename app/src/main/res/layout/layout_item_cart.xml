<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <CheckBox
        android:id="@+id/cbGioHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <ImageView
        android:id="@+id/imgAnhSanPham_Cart"
        android:layout_margin="10dp"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_launcher_background"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTenSanPham_GioHang"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Sản Phẩm"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tvGiaTien_GioHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Giá tiền"
            android:textColor="@color/darklcam"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btnTru_GioHang"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_subtraction"/>
            <EditText
                android:id="@+id/edtSoLuong_GioHang"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:inputType="number"/>
            <Button
                android:id="@+id/btnCong_GioHang"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_plus"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">
                    <Button
                        android:id="@+id/btnXoa_Cart"
                        android:layout_width="50dp"
                        android:layout_height="40dp"

                        android:background="@drawable/icon_remove"
                        />
                </LinearLayout>


        </LinearLayout>
    </LinearLayout>



</LinearLayout>